{
    "human": { // TODO: temporary query for testing purposes, to be replaced with real ones
        "type": "query",
        "fields": {
            "patterns": ["?human rdf:type Human"],
            "vars": ["?human"]
        }
    },
    "expression": {
        "type": "expression",
        "topic": "/robot_face/expression",
        "fields": {
            "expression": "#1$name|neutral"
        }
    },
    "led_blink": {
        "type": "do_timed_led_effect",
        "topic": "/pal_led_manager/do_effect",
        "fields": {
            "params": {
                "effect_type": 3,
                "blink": {
                    "first_color": {
                        "r": "#1$r1",
                        "g": "#2$g1",
                        "b": "#3$b1",
                        "a": "$a1|1.0"
                    },
                    "second_color": {
                        "r": "$r2",
                        "g": "$g2",
                        "b": "$b2",
                        "a": "$a2"
                    },
                    "first_color_duration": {
                        "sec": "$sec1|1",
                        "nanosec": "$nsec1"
                    },
                    "second_color_duration": {
                        "sec": "$sec2|1",
                        "nanosec": "$nsec2"
                    }
                }
            }
        }
    },
    "led_fixed": {
        "type": "do_timed_led_effect",
        "topic": "/pal_led_manager/do_effect",
        "fields": {
            "params": {
                "fixed_color": {
                    "color": {
                        "r": "#1$r",
                        "g": "#2$g",
                        "b": "#3$b",
                        "a": "$a|1.0"
                    }
                }
            }
        }
    },
    "look_at": {
        "type": "point_stamped",
        "topic": "/robot_face/look_at",
        "fields": {} // TODO: replace with future tf_query
    },
    "motion": {
        "type": "play_motion2",
        "topic": "/play_motion2",
        "fields": {
            "motion_name": "#1$name",
            "skip_planning": false
        }
    }
}