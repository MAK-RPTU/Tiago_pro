<robot xmlns:xacro="http://ros.org/wiki/xacro" name="pal_sea_arm">

  <xacro:macro name="pal_sea_arm_ros2_control" params="use_sim:=^|false">

    <xacro:arg name="end_effector" default="no-end-effector"/>
    <xacro:arg name="ft_sensor" default="no-ft-sensor"/>

    <xacro:property name="end_effector" value="$(arg end_effector)" />
    <xacro:property name="has_ft_sensor" value="${ft_sensor != 'no-ft-sensor'}" />
    <xacro:property name="ft_sensor" value="$(arg ft_sensor)" />

    <xacro:include filename="$(find pal_sea_arm_description)/urdf/arm/arm.ros2_control.xacro" />

    <xacro:if value="${end_effector == 'pal-pro-gripper'}">
      <xacro:include filename="$(find pal_pro_gripper_description)/urdf/gripper.ros2_control.xacro" />
    </xacro:if>


    <!-- calibration offsets -->
    <xacro:include filename="$(find pal_sea_arm_description)/urdf/calibration_constants.urdf.xacro" />

    <ros2_control name="ros2_control_pal_sea_arm_system" type="system">
      <hardware>
        <xacro:if value="$(arg use_sim)">
          <plugin>gazebo_ros2_control/GazeboSystem</plugin>
        </xacro:if>
        <xacro:unless value="$(arg use_sim)">
          <plugin>robot_control/RobotControl</plugin>
        </xacro:unless>

      </hardware>

      <!-- arm -->
      <xacro:ros2_control_arm name="arm_1" reduction="121.0" offset_value="${arm_1_joint_offset}"/>
      <xacro:ros2_control_arm name="arm_2" reduction="121.0" offset_value="${arm_2_joint_offset}"/>
      <xacro:ros2_control_arm name="arm_3" reduction="101.0" offset_value="${arm_3_joint_offset}"/>
      <xacro:ros2_control_arm name="arm_4" reduction="101.0" offset_value="${arm_4_joint_offset}"/>
      <xacro:ros2_control_arm name="arm_5" reduction="101.0" offset_value="${arm_5_joint_offset}"/>
      <xacro:ros2_control_arm name="arm_6" reduction="101.0" offset_value="${arm_6_joint_offset}"/>
      <xacro:ros2_control_arm name="arm_7" reduction="101.0" offset_value="${arm_7_joint_offset}"/>


      <xacro:if value="${end_effector == 'pal-pro-gripper'}">
        <!-- pal-pro-gripper -->
        <xacro:ros2_control_pal_pro_gripper name="gripper" reduction="1.0" />
      </xacro:if>

      <!-- Force Torque sensor -->
      <xacro:if value="${has_ft_sensor}">
        <xacro:include filename="$(find pal_sea_arm_description)/urdf/sensors/ft_sensor/sensor.ros2_control.xacro"/>
        <xacro:ros2_control_force_torque_sensor name="wrist_ft_sensor"/>
      </xacro:if>

    </ros2_control>
  </xacro:macro>
</robot>
