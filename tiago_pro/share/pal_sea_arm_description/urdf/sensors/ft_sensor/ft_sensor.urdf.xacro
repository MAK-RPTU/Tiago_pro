<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:macro name="ft_sensor" params="name parent type">

        <xacro:include filename="$(find pal_sea_arm_description)/urdf/sensors/ft_sensor/${type}.urdf.xacro" />
        <xacro:include filename="$(find pal_sea_arm_description)/urdf/sensors/ft_sensor/ft_sensor.gazebo.xacro" />
        <xacro:ft_sensor name="${name}" parent="${parent}"/>
        <xacro:pal_sea_arm_force_torque_sensor name="${name}" update_rate="30"/>

    </xacro:macro>

</robot>
