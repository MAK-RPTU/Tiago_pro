<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!--Constant parameters-->
  <xacro:property name="torso_max_vel" value="0.035" />
  <xacro:property name="torso_eps" value="0.00" />

  <xacro:macro name="tiago_pro_torso" params="name parent">

    <!-- Connection with the base -->
    <link name="${name}_base_link">
      <inertial>
        <origin xyz="-0.043624513712351 -5.47054746000779E-05 0.0277532809798974" rpy="0 0 0" />
        <mass value="1.00223030186675" />
        <inertia ixx="0.00660602943010985" ixy="3.32767644990319E-05" ixz="-0.000408545705396379" iyy="0.00690807320580873" iyz="8.29177467923023E-06" izz="0.0122016808119362" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://tiago_pro_description/meshes/torso/torso_fixed.stl" />
        </geometry>
        <material name="pal/DarkGrey"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://tiago_pro_description/meshes/torso/torso_fixed_collision.stl" />
        </geometry>
      </collision>
    </link>

    <joint name="${name}_fixed_joint" type="fixed">
      <origin rpy="0 0 0" xyz="-0.0245 0 0.215" />
      <parent link="${parent}" />
      <child link="${name}_base_link" />
      <axis xyz="0 0 0" />
    </joint>

    <gazebo reference="${name}_base_link">
      <material>Gazebo/DarkGrey</material>
    </gazebo>

    <!-- Fixed column -->
    <link name="${name}_fixed_column_link">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0.275" />
        <geometry>
          <box size="0.18 0.2 0.55"/>
        </geometry>
        <material name="pal/DarkGrey"/>
      </visual>
    </link>

    <joint name="${name}_fixed_column_joint" type="fixed">
      <origin rpy="0 0 0" xyz="-0.028 0 0.205" />
      <parent link="${parent}" />
      <child link="${name}_fixed_column_link" />
      <axis xyz="0 0 0" />
    </joint>

    <gazebo reference="${name}_fixed_column_link">
      <material>Gazebo/DarkGrey</material>
    </gazebo>

    <!-- Lift torso -->
    <link name="${name}_lift_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
          <mass value="3.24266045177967" />
          <inertia ixx="0.0295369723560087" ixy="-7.85101789883696E-07" ixz="-8.58576921315497E-05" iyy="0.0170989395656347" iyz="-8.17944373020342E-06" izz="0.0290055792681799" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://tiago_pro_description/meshes/torso/torso_lift_link.stl" />
        </geometry>
        <material name="">
          <color rgba="0.894117647058823 0.913725490196078 0.929411764705882 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://tiago_pro_description/meshes/torso/torso_lift_link_collision.stl" />
        </geometry>
      </collision>
      <collision>
        <origin xyz="-0.226436438571948 3.12797385809451E-05 0.00524038105676683" rpy="0 0 -1.5707963267949" />
        <geometry>
          <mesh filename="package://tiago_pro_description/meshes/torso/laptop_tray_collision.stl" />
        </geometry>
      </collision>
    </link>

    <joint name="${name}_lift_joint" type="prismatic">
      <origin xyz="0 0 0.5545" rpy="0 0 0" />
      <parent link="${name}_base_link" />
      <child link="${name}_lift_link" />
      <axis xyz="0 0 1" />
      <limit effort="2000" lower="0" upper="0.35" velocity="${torso_max_vel}" />
      <calibration rising="0.0" />
      <dynamics damping="1000" />
      <safety_controller k_position="20" k_velocity="20" soft_lower_limit="${0.0 + torso_eps}" soft_upper_limit="${0.35 - torso_eps}" />
    </joint>

    <gazebo reference="${name}_lift_joint">
      <implicitSpringDamper>1</implicitSpringDamper>
    </gazebo>

    <!-- Head mounting link -->
    <link name="${name}_head_link">
      <inertial>
        <origin xyz="3.22658566531686E-16 -5.67885640993557E-18 -0.00811522365001816" rpy="0 0 0" />
        <mass value="0.19541960582329" />
        <inertia ixx="0.000439179732174765" ixy="5.76286393008048E-20" ixz="1.09094748941927E-18" iyy="0.000498456551929403" iyz="-1.60059406264224E-19" izz="0.000881920896131913" />
      </inertial>
      <visual>
        <origin xyz="0 0 0.01085" rpy="0 0 0" />
        <geometry>
          <box size="0.11 0.092 0.0217" />
        </geometry>
        <material name="">
          <color rgba="0.298039215686275 0.298039215686275 0.298039215686275 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0.01085" rpy="0 0 0" />
        <geometry>
          <box size="0.11 0.092 0.0217" />
        </geometry>
      </collision>
    </link>

    <joint name="${name}_head_joint" type="fixed">
      <origin xyz="0 0 0.0399999999999999" rpy="0 0 0" />
      <parent link="${name}_lift_link" />
      <child link="${name}_head_link" />
      <axis xyz="0 0 0" />
    </joint>

    <!-- Torso arm left link-->
    <link name="${name}_arm_left_link"/>

    <joint name="${name}_arm_left_joint" type="fixed">
      <origin xyz="0.0898413194899453 0.159181203216899 -0.0920547375491735" rpy="-2.06788770984932 0 -1.22173047639603" />
      <parent link="${name}_lift_link" />
      <child link="${name}_arm_left_link" />
      <axis xyz="0 0 0" />
    </joint>

    <!-- Torso arm right link -->
    <link name="${name}_arm_right_link"/>

    <joint name="${name}_arm_right_joint" type="fixed">
      <origin xyz="0.0898413194899453 -0.1591812032169 -0.0920547375491731" rpy="-2.06788770984932 0 -1.91986217719377" />
      <parent link="${name}_lift_link" />
      <child link="${name}_arm_right_link" />
      <axis xyz="0 0 0" />
    </joint>

  </xacro:macro>
</robot>
