<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="allegro_hand">
    <xacro:include filename="$(find allegro_hand_description)/urdf/allegro_hand.urdf.xacro" />
    <xacro:include filename="$(find allegro_hand_description)/gazebo/gazebo.urdf.xacro" />
    <xacro:arg name="use_sim_time" default="false"/>
    <xacro:arg name="pid_controllers" default="false"/>
    <xacro:arg name="use_xela_sensor" default="false"/>

    <!-- ros2_control -->
    <xacro:include filename="$(find allegro_hand_description)/ros2_control/ros2_control.urdf.xacro" />
    <xacro:allegro_hand_ros2_control use_sim_time="$(arg use_sim_time)" pid_controllers="$(arg pid_controllers)" use_xela_sensor="$(arg use_xela_sensor)" />
    
    <link name="world"/>
    <joint name="world_fixed" type="fixed">
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
        <parent link="world"/>
        <child link="hand_base_link"/>
    </joint>

    <link name="hand_base_link">
    </link>

    <!-- reflect: Set to 1 for a right hand, or to -1 for a left hand-->
    <xacro:allegro_hand name="gripper" parent="hand_base_link" reflect="-1">
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </xacro:allegro_hand>

</robot>
