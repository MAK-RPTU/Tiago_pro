<robot xmlns:xacro="http://ros.org/wiki/xacro"
       name="allegro_hand" >
    <xacro:macro name="allegro_hand_ros2_control" params="use_sim_time:=^|false pid_controllers:=^|false use_xela_sensor:=^|false">

    <xacro:include filename="$(find allegro_hand_description)/urdf/allegro_hand.ros2_control.xacro" />
    <xacro:include filename="$(find xela_uskin_sensor)/xela_uskin_sensor.xml" />
    <xacro:property name="can_device_name" value="can_device" />
    <xacro:property name="can_device" value="can1" />
    
    <xacro:unless value="$(arg use_sim_time)">
      <ros2_control name="ros2_control_allegro_hand_system" type="system">
        <hardware>
          <plugin>allegro_hand_system/AllegroHandSystem</plugin> 
        </hardware>
        <xacro:ros2_control_allegro_hand name="gripper" pid_controllers="$(arg pid_controllers)" reduction="1.0" />
      </ros2_control>
      <xacro:if value="$(arg use_xela_sensor)">
        <ros2_control name="ros2_control_xela_sensor" type="sensor">
          <hardware>
            <plugin>xela_uskin_sensor/XelaUskinSensor</plugin>
            <param name="${can_device_name}">${can_device}</param>
          </hardware>
        </ros2_control>
      </xacro:if>
    </xacro:unless>

    <xacro:if value="$(arg use_sim_time)">
      <ros2_control name="ros2_control_allegro_hand_system" type="system">
        <hardware>
          <plugin>gazebo_ros2_control/GazeboSystem</plugin>
        </hardware>
        <xacro:ros2_control_allegro_hand name="gripper" pid_controllers="$(arg pid_controllers)" reduction="1.0" />
      </ros2_control>
    </xacro:if>

  </xacro:macro>
</robot>
